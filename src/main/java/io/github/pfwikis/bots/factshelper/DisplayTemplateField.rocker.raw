@args(SProperty prop, RockerBody content)

@*do not show if the field is not required and has no value*@
@if(!prop.isRequired()) {
	@{@{#if:@prop.wikitextToTestIfValue()|
}



<div class="facts-display-key">[[@prop.getName()::@@@@@@]]</div>
<div class="facts-display-value">
	@if(prop.isRequired()) {
		{{#if:@prop.wikitextToTestIfValue()
			|@content
			|[[Category:Pages with errors]]{{#info: @prop.getName() is required!|error}}
		}}
	}
	else {
		@content
	}
</div>



@if(!prop.isRequired()) {
	@}@}
}