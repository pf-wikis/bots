	{{#if:{{{Website|}}}|
		<div class="website">
			{{#if:{{{Pubcode|}}}|[{{{Website}}} {{{Pubcode}}}]|[{{{Website}}} Publisher's product page]}}
		</div>
	}}
	<div class="type">({{#if:{{{@form.getName() type|}}}|{{{@form.getName() type}}}|@form.getName()}})</div>
	<div class="table">
